<odoo>
  <record id="01_graficos_view_form" model="ir.ui.view">
    <field name="name">01_graficos.view_form</field>
    <field name="model">ir.ui.view</field>
    <field name="arch" type="xml">
      <form string="Contenido incrustado" class="background-image  o_form_nosheet"
        create="false" edit="false" delete="false">
        <div id="div_main">
          <div id="div_second_attendance" class="row">
            <div id="div_third_attendance" class="col-md-10">
              <iframe id="iframe_attendance" src="http://localhost:8501"></iframe>
            </div>
            <div class="col-md-2">
              <div class="card">
                <div class="card-header">
                  <h2>Opciones</h2>
                </div>
                <div class="card-body">
                  <a href="http://portal.wtech-cs.com:8501" target="_blank"
                    class="btn btn-dark">Pantalla completa</a>
                </div>
              </div>
              <div class="card mt-3">
                <div class="card-header">
                  <h2>Información adicional</h2>
                </div>
                <div class="card-body">
                  <p>Utiliza esta herramienta para obtener los registros de
                    asistencias por usuario, departamento o todo en conjunto y
                    descargarlo en un formato xlsx.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </field>
  </record>

  <record id="01_graficos_view_action" model="ir.actions.act_window">
    <field name="name">Gráficos</field>
    <field name="res_model">ir.actions.act_window</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="01_graficos_view_form" />
    <field name="target">inline</field>
  </record>

  <menuitem id="main_menu_action" name="Herramientas WTECH" sequence="1" />

  <menuitem id="01_item_menu_action" name="Asistencia" parent="main_menu_action"
    action="01_graficos_view_action" sequence="10" />
</odoo>